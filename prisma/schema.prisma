generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type TasksSubTasks {
  title TasksSubTasksTitle
}

type TasksSubTasksTitle {
  description String
  done        Boolean
}

model Boards {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  creator String
  members String[]
  title   String
}

model Tasks {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  asignedTo   String
  description String
  done        Boolean
  dueDate     String
  subTasks    TasksSubTasks
  title       String
}

model Users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  name  String
  theme String
}
